@model IEnumerable<AddtoCart.Models.tbproduct>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.p_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.p_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pimage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pdescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pEntry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbbrand.b_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbcat.c_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.p_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.p_price)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.pimage)*@
            <img src="~/ProductImage/@item.pimage" width="50" height="50" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pdescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pEntry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbbrand.b_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbcat.c_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }, new { @class="btn btn-info"}) |
            @Html.ActionLink("Details", "Details", new { id=item.id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
