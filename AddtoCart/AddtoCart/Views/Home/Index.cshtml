
@{
    ViewBag.Title = "Index";
}

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card button:hover {
            opacity: 0.7;
        }
</style>
<h2>Index</h2>
<div class="row">



    <div class="col-md-4">
        <div class="card">


            @{
                foreach (var item in ViewBag.s)
                {

                    <img src="~/ProductImage/@item.pimage" alt="Denim Jeans" style="width:100%">
                    <h1>@item.p_name</h1>
                    <p class="price">@item.p_price</p>
                    <p>@item.pdescription</p>
                    <p><button>Add to Cart</button></p>




                }

            }
        </div>
    </div>
</div>

